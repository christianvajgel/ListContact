
@{
    ViewData["Title"] = "New";
}

@model Todo

<h1>Create New Task</h1>

@using (Html.BeginForm(actionName: "Save", controllerName: "Todo", FormMethod.Post))
{

<div class="form-group">
    <label for="textTaskName">Task name:</label>
    @Html.TextBoxFor(x => x.Name)
    @Html.ValidationMessageFor(x => x.Name)
</div>
<div class="form-group form-check">
    <label class="form-check-label" for="checkCompleteTask">Completed task?</label>
    @Html.CheckBoxFor(x => x.Finished)
</div>
<button type="submit" class="btn btn-primary">Submit</button>

}
